public class Program {
	public static boolean isPalindrome(String str) {
		if(str.length() == 0 || str.length() == 1) // Base Case
			return true;
		else if(str.charAt(0) == str.charAt(str.length()-1)) // Checking the First and the Last Character
			 return isPalindrome(str.substring(1, str.length()-1)); //Recursion to check every Character.
		return false;
			
	}
}
